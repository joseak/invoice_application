extends layout
block right_pane
	p#p_padding INVOICE DETAILS
	.invoice_detail
		.inv_heading
			div
				div(style={color: "#000000"}) INVOICE
				div(style={color: "#000000"}) #{element.name}
				div #{element.date}
			div
				div(style={color: "#000000"}) CUSTOMER DETAILS
				div(style={color: "#000000"}) #{element.author}
				div #{element.email}
			div(style={float: 'right', width: '15%'}) PRINT
		.blank
		.invoice_items
			table(style={float: 'left', width: '100%'})
				thead
					tr
						th.item ITEM
						th.qty QUANTITY 
						th.price_item PRICE
				tbody
					each item in items
						tr
							td.item(style={color: '#000000'}) #{item.name}
							td.qty(style={color: '#000000'}) #{item.quantity}
							td.price_item(style={color: '#000000'}) #{item.price}
		.blank
		.invoice_total
			.left_total Sub Total
			.right_total #{total.subTotal}
			.left_total Tax
			.right_total #{total.tax}
			.left_total Discount
			.right_total #{total.discount}
			.blank(style={'float': 'left'})
			.left_total(style={color: '#000000'}) Grand Total
			.right_total(style={color: '#000000'}) #{total.grandTotal}
	.blank(style={'height': '40px', 'float': 'right'})

	button(onClick="modal_display()", 'data-toggle'='modal') &plus;

	.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
		#myModal.modal-dialog
			.modal-content
				.modal-header
					button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
					h3.modal-title Create New Invoice
				.modal-body
					div CUSTOMER DETAILS
					div(style={height:'100%', overflow: 'hidden'})
						div(style={width: '60%', float:'left', height:'33%'})
							p Full Name
							input#user_name(type='text', name='user')
						div(style={width: '40%', float:'right', height:'33%'})
							p Phone Number
							input#phone(type='text', name='phone')
						div(style={width: '60%', float:'left', height:'66%'})
							p Address
							textarea#address(rows='5', cols='50', name='address')
						div(style={width: '40%', float:'right', height:'17%'})
							p Email Id
							input#email(type='text', name='email')
						div(style={width: '40%', float:'right', height:'16%'})
							p Pincode
							input#pincode(type='text', name='pincode')
				.modal-footer
					button(type="button", onClick='inventory_modal_display()') Proceed

	.modal.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
		#inventory_modal.modal-dialog
			.modal-content
				.modal-header
					button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
					div(style={overflow:'hidden'})
						h3.modal-title(style={float:'left'}) Create New Invoice
						div(style={float:'right', 'margin-right': '20px', 'text-align': 'right'})
							p#u_name Name
							p#u_email Email
				.modal-body
					div PRODUCT DETAILS
					div(style={height:'100%', overflow: 'hidden'})
						.invoice_items
							table#create_inventory_table(style={float: 'left', width: '100%', 'margin-top': '20px'})
								thead
									tr
										th.item ITEM
										th(style={'text-align': 'left'}) QUANTITY 
										th(style={'text-align': 'left'}) PRICE
								tbody
									tr

						.blank
						div(style={width: '55%', float:'left', 'margin-left': '20px'})
							input#item(type='text', size= '50', name='user')
						div(style={width: '20%', float:'left'})
							input#qty(type='text', name='phone')
						div(style={width: '15%', float:'left'})
							input#price(type='text', name='address')
						button(type="button", onClick='add_row()', style={width: '5%', float:'right'}) Add
					.blank(style={height: '100px'})
					div
						div(style={width: '20%', float:'left', 'margin-left': '20px'})
							input#tax_percent(type='text', name='tax', placeholder='Tax %')
						div(style={width: '20%', float:'left'})
							input#discount_percent(type='text', name='Discount', placeholder='Discount %')
						div(style={width: '40%', float:'left', 'text-align': 'right'}) Sub Total
						div#sub_total(style={color: '#000000', width: '10%', float:'right', 'text-align': 'left'}) 0
				.blank
				.modal-footer
					.blank
					div(style={height:'100%', overflow:'hidden'})
						div#tax_value(style={width: '20%', float:'left', 'margin-left': '20px'})
						div#discount_value(style={width: '20%', float:'left'})
						div(style={width: '20%', float:'right'})							
							button(type="button", onClick='save_inventory()') Proceed
